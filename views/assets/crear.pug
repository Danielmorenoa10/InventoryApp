                label.block.text-sm.upperacase.text-gray-500.mb-3.font-bold(for="Modelo") Modelo
                input#modelo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Toca poner algo aqui" type="text" name="modelo") 
        
        div(class="md:flex md:gap-4 mb-6")
            div
                label.block.text-sm.upperacase.text-gray-500.mb-3.font-bold(for="Serial") Serial
                input#serial.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Toca poner algo aqui" type="text" name="serial") 
            div
                label.block.text-sm.upperacase.text-gray-500.mb-3.font-bold(for="Usuario") Usuario
