extends ../layout/index

block contenido 
    .py-2
        h1.text-4xl.my-3.font-extrabold.text-center.text-yellow-8 Inventory
            span.font-normal App 
        h2.text-center.text-2xl= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-2.mx-auto.max-w-96.py-3.drop-shadow-2xl
            .bg-white.py-3.px-2.rounded-xl
                form.space-y-3(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="usuario") usuario
                        input#usuario.w-full.px-3.py-2.border.border-blue-200.rounded-xl.placeholder-gray-200(placeholder="Ingresa tu usuario" type="text" name="usuario" value= usuario ? usuario.campousuario :'' )
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="usuario") Email
                        input#email.w-full.px-3.py-2.border.border-blue-200.rounded-xl.placeholder-gray-200(placeholder="Ingresa tu correo electronico" type="email" name="email" value= usuario ? usuario.email :'')
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="contraseña") contraseña
                        input#password.w-full.px-3.py-2.border.border-blue-200.rounded-xl.placeholder-gray-200(placeholder="Contraseña" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="repetir contraseña") repetir contraseña
                        input#confirmPassword.w-full.px-3.py-2.border.border-blue-200.rounded-xl.placeholder-gray-200(placeholder="Repite tu contraseña" type="password" name="repetir_password")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="ubicacion") ubicacion
                        input#ubicacion.w-full.px-3.py-2.border.border-blue-200.hoverbg-red-600.rounded-xl.placeholder-gray-200(placeholder="Ingresa tu ubicacion" type="text" name="ubicacion" value= usuario ? usuario.ubicacion :'')

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión

                    input(class="w-full bg-cyan-400 hover:bg-lime-400 py-2 text-white uppercase font-bold rounded-xl"  type="submit" value="Registrarme")
                        


