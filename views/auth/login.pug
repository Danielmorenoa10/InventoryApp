extends ../layout/index

block contenido
    .py-5
        h1.text-4xl.my-3.font-extrabold.text-center.text-yellow-8 Inventory
            span.font-normal App 
        h2.text-center.text-2xl= pagina

        if errores 
            div(class= "max-w-md mx-auto my10")
                each error in errores 
                    p.bg-red-600.text.white.uppercase.text.xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-2.mx-auto.max-w-96.py-3
            .bg-white.py-3.px-2
                form.space-y-5(method= "POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-blue-200.rounded-xl.placeholder-gray-200(placeholder="Ingresa tu correo electronico" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-1.font-bold(for="contraseña") contraseña
                        input#usuario.w-full.px-3.py-2.border.border-blue-200.rounded-xl.placeholder-gray-200(placeholder="Contraseña" type="password" name="contraseña")
                    div.flex.items-center.justify-between

                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi contraseña
                        a.text-gray-500.text-xs(href="/auth/registro") Registrarme                        

                    input(class="w-full bg-cyan-400 hover:bg-lime-400 py-2 text-white uppercase font-bold rounded-xl"  type="submit" value="Iniciar sesión")
                        

